<main class="main-content">
	{{sidebar | raw}}

	<div class="mb-3 content-body">
		<div class="card">
			{% if registrationSuccessful %}
				<div class="card-body w-100 p-0" id="hero-spot2">
					<div class="card-title">
						<h2 class="mb-4 mt-5 text-success display-5 text-center">
							Registration Successful
							<i class="fa fa-check-circle"></i>
						</h2>
						<br/>
						<a class="nav-link text-light p-2 pe-3 text-center" href="/edit">
							<button class="btn btn-sm btn-primary">
								<span>Edit my projects
									<i class='fa fa-arrow-circle-right'></i>
								</span>
							</button>
						</a>
					</div>
				</div>

			{% else %}
				<div class="row m-0">
					<div class="col-lg-6 offset-lg-3">
						<div class="p-3">
							{% include 'subscriber-registration-form.twig' with {'loginError': loginError, 'email': email, registrationPath: '/login', 'isPasswordModificationSuccess': isPasswordModificationSuccess}  %}
						</div>
					</div>
				</div>
			{% endif %}
		</div>
	</div>

</main>
